@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CheapFlightsAppProject.Database.Flight

@if (ViewBag.role=="0"){
Layout = "_MainLayout";
}
else {
Layout = "_AdminMainLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title>Add Flight ✈️</title>
</head>
<body>
<div class="text-center">
    <h1 class="display-4">Add Flight ✈️</h1>
    <form method="post" asp-controller="Home" asp-action="ModifyDataBase">
        <div class="form-group">
            <label asp-for="Departure"></label>
            <input asp-for="Departure" type="text" placeholder="Departure 🌎" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="Destination"></label>
            <input asp-for="Destination" type="text" placeholder="Destination🌎" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" type="text" placeholder="Date📅" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="FlightDuration"></label>
            <input asp-for="FlightDuration" type="text" placeholder="Flight duration 🕘" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" type="number" placeholder="Price 💸" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="FlightNumber"></label>
            <input asp-for="FlightNumber" type="text" placeholder="Flight Number" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="FlightOperator"></label>
            <input asp-for="FlightOperator" type="text" placeholder="Flight Operator 👩‍✈️" class="form-control" required/>
        </div>
        <button type="submit" class="btn btn-primary">Add flight!</button>
    </form>
</div>
</body>
</html>