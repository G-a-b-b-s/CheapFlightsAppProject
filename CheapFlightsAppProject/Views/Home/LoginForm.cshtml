<div class="text-center">
    <h1 class="display-4">Log in </h1>
    <form method="post" asp-controller="Home" asp-action="CheckLogin">
        <div class="form-group">
            <label for="Login">Login</label>
            <input type="text" placeholder="Login 🌎" class="form-control" id="Login" name="Login" required />
        </div>
        <div class="form-group">
            <label for="Haslo">Password</label>
            <input type="password" placeholder="Password 🔐" class="form-control" id="Haslo" name="Haslo"  required/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>